@model IEnumerable<proyectoBuzon.Models.Pedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_AdminIndex.cshtml";
}


<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">


<<center>
    <h1>
        <font color="Black" face="Comic Sans MS,arial">Pedidos </font>
    </h1>
    <hr>
</center>

<div class="container">
    <div class="table-responsive">

        
        <p>
            <a class="fas fa-plus-circle btn-lg" asp-action="Create"> Crear Nuevo</a>
        </p>

        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr class="info">
                    <th>
                        @Html.DisplayNameFor(model => model.IdClNavigation)
                    </th>
                    <th>Opción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdClNavigation.ApellidosCl)
                        </td>
                        <td>
                            
                            <a class="far fa-edit btn-info btn-sm" asp-action="Edit" asp-route-id="@item.IdPedido"> Editar</a> |
                            <a class="far fa-list-alt btn-success btn-sm" asp-action="Details" asp-route-id="@item.IdPedido"> Detalles</a> |
                            <a class="far fa-trash-alt btn-danger btn-sm " asp-action="Delete" asp-route-id="@item.IdPedido"> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
