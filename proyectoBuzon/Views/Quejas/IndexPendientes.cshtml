@model IEnumerable<proyectoBuzon.Models.Quejas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Cliente.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">




@*<h2>Index</h2>*@
<h2> </h2>

@*<p>
        <a asp-action="Create">Realizar nueva Queja</a>
    </p>*@


<center>
    <h2>QUEJAS PENDIENTES</h2>
</center>

<div class="container">
    <div class="table-responsive">



        @*<td>
                @Html.ActionLink("MENU PRINCIPAL", "", "Cliente", null, new { @class = "btn btn-success" })
            </td>*@
        
            <a class="fas fa-arrow-alt-circle-left btn-lg" asp-controller="Quejas" asp-action="Create"> Regresar</a>

        <br>

        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr class="danger">

                    <th>
                        CLIENTE
                    </th>
                    <th>
                        ESTADO
                    </th>
                    <th>
                        PEDIDO
                    </th>
                    <th>
                        TIPO DE QUEJA
                    </th>
                    <th>
                        POLÍTICA
                    </th>
                    <th>
                        DESCRIPCIÓN
                    </th>

                    <th>
                        FECHA
                    </th>
                    <th>OPCIÓN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>

                        @Html.DisplayFor(modelItem => item.IdClNavigation.NombresCl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEstadoNavigation.NomEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdPedido)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipoqNavigation.NombreTipoq)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPoliticaNavigation.NomPolitica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionQ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaQ)

                    </td>
                    <td>
                        <a class="far fa-edit btn-lg " asp-action="Edit" asp-route-id="@item.IdQ">Editar</a>
                        @*<a asp-action="Details" asp-route-id="@item.IdQ">Details</a> |*@
                        <a class="far fa-trash-alt btn-lg " asp-action="Delete" asp-route-id="@item.IdQ">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
