<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">

<div class="container">
    <div class="table-responsive">

        <a class="fas fa-arrow-alt-circle-left btn-lg" asp-controller="Quejas" asp-action="Create"> Regresar</a>

        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr class="info">
                    <th>
                        PEDIDO
                    </th>

                    <th>
                        CLIENTE
                    </th>
                    <th>
                        ESTADO
                    </th>

                    <th>
                        TIPO DE QUEJA
                    </th>
                    <th>
                        POLÍTICA
                    </th>
                    <th>
                        DESCRIPCIÓN
                    </th>
                    <th>
                        FECHA
                    </th>
                    <th>OPCIÓN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdPedido)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.IdClNavigation.NombresCl)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.IdEstadoNavigation.NomEstado)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IdTipoqNavigation.NombreTipoq)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdPoliticaNavigation.NomPolitica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescripcionQ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaQ)

                        </td>
                        <td> <a CLASS="btn btn-warning btn-sm" asp-action="IndexRespuesta" asp-route-id="@item.IdQ">Respuestas</a></td>
                      
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>