@model IEnumerable<proyectoBuzon.Models.TblCliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_AdminIndex.cshtml";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">


<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">

<center>
    <h1>
        <font color="Black" face="Comic Sans MS,arial">Listado Técnico </font>
    </h1>
    <hr>
</center>

<div class="container">
    <div class="table-responsive">


        <p>
            <a class="fas fa-user-plus btn-lg" asp-action="Create"> Crear Técnico</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Cédula
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido
                    </th>
                    <th>
                        Fecha Nacimiento
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>Opción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CedulaCl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombresCl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidosCl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaNacimientoCl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefonoCl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CorreoCl)
                        </td>
                        <td>
                            <a color="black" class="far fa-edit btn-info btn-sm" asp-action="Edit" asp-route-id="@item.IdCl"> Editar</a> |
                            <a color="green" class="far fa-list-alt btn-success btn-sm " asp-action="Details" asp-route-id="@item.IdCl"> Detalles</a> |
                            <a color="red"class="far fa-trash-alt btn-danger btn-sm " asp-action="Delete" asp-route-id="@item.IdCl"> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
